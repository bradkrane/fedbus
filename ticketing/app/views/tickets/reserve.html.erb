<% if @errors.nil? %>
	<% @tickets.each do |t| %>
		<%= link_to "Ticket #{t.id.to_s}", t %>
		<br />
		<%= "For the bus: #{t.bus.name}" %>
		<br />
		<%= "In the direction: #{t.direction.to_s.humanize}" %> 
		<br />
	<% end %>
<% else %>
	<%= @errors %>
	<% @tickets_on_date.each do |t| %>
		<br />
		<%= link_to "Ticket #{t.id.to_s}", t %>
	<% end %>
<% end %>
