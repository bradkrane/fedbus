<%# "Tickets have been reserved for " + current_user.to_s %>
<% if @errors.nil? %>
	<%= link_to "Ticket #{@ticket.id.to_s}", @ticket %>
	<br />
	<%= "For the bus: #{@bus.name}" %>
	<br />
	<%= "In the direction: #{@ticket.direction.to_s.humanize}" %> 
	<br />
	<% @ticket.errors.each do |e| %>
		<br />
		<%= "Error: #{e.to_s}" %>
	<% end %>
<% else %>
	<%= @errors %>
	<% @tickets_on_date.each do |t| %>
		<br />
		<%= link_to "Ticket #{t.id.to_s}", t %>
	<% end %>
<% end %>

