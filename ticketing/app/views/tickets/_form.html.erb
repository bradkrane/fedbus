  <%= f.error_messages %>

	<p>
		<%= f.label :user %><br />
		<%= collection_select :ticket, :user_id, User.all, :id, :userid %>
	</p>
	<p>
		<%= f.label :bus %><br />
		<%= collection_select :ticket, :bus_id, Bus.where(["departure >= ?", Date.today]), :id, :name %>
	</p>
