<% if logged_in? %>
	<p>You are logged in as <%= link_to h(current_user), current_user %>. <%= link_to "Logout", logout_path %> <% if current_user.has_permission?(:view_admin_panel) %><%= link_to "Admin Panel", admin_path %><% end %></p>
<% else %>
  <p>You are not logged in. <%= link_to "Login", login_redirect_path %></p>
<% end %>
