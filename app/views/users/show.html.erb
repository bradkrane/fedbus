<strong>Name:</strong> <%= @user.first_name %> <%= @user.last_name %><br />
<strong>Userid:</strong> <%= @user.userid %><br />
<strong>Email:</strong> <%= @user.email %><br />
<%= link_to "Shopping Cart", "/cart/" + @user.id.to_s %>
<br />
<%= link_to 'Edit User', edit_user_path(@user) %>
<br /><br />

<% if current_user.has_permission?(:manage_access_control) %>
  <b>Roles:</b><br />
  <% @user.roles.each do |r| %>
	<%= link_to r.name, role_path(r) %><br />
  <% end %>
  <br />
<% end %>

<b>Ticket History:</b><br />
<% @user.tickets.reverse.each do |t| %>
	<%= link_to "Ticket #{t.id}", ticket_path(t) %> -- <%= t.status.humanize %><br />
<% end %>